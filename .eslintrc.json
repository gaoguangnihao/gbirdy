{
  "parser": "babel-eslint",
  "extends": "standard",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "env": {
    "browser": true
  },
  "rules": {
    "import/no-unresolved": [2],
    "arrow-body-style": 0,
    "arrow-parens": [2, "always"],
    "camelcase": [0, {"properties": "always"}],
    "comma-dangle": ["error", "never"],
    "import/extensions": 0,
    "import/no-extraneous-dependencies": 0,
    "import/no-unresolved": 0,
    "no-bitwise": 0,
    "no-else-return": 1,
    "no-empty": 1,
    "no-new": 0,
    "no-plusplus": 0,
    "class-methods-use-this": 1,
    "quote-props": 0,
    "consistent-return": 1,
    "guard-for-in": 1,
    "no-restricted-syntax": 1,
    "no-param-reassign": 0,
    "no-underscore-dangle": [0, {"allowAfterSuper": true }],
    "no-var": 0,
    "object-shorthand": 0,
    "prefer-const": 0,
    "no-unused-expressions": ["error", { "allowShortCircuit": true }],
    "no-continue": 0,
    "no-array-index-key": 0,
    "global-require": 1,
    "func-names": 0,
    "yoda": ["error", "always", {"onlyEquality": true}],
    "no-useless-escape": 0,
    "no-lonely-if": 0,
    "semi":["error","always"] 
  },
  "globals": {
    "phaser": true
  },
  "settings": {
    "import/core-modules": ["phaser", "pixi", "p2"]
  }
}
